{% extends 'admin_base.html.twig' %}

{% block title %}{{ 'section.create'|trans }}{% endblock %}

{% block body %}
<div class="content-page">
    <div class="content mb-2">

        <!-- Start Content-->
        <div class="container-fluid">
            
         	<div class="row">
			    <div class="col-9">     
                    <div class="page-title-box">
                        <h4 class="page-title">{{ 'nav.outil'|trans }} / {{ 'templates'|trans }} / {{ 'section.create'|trans }}</h4>
                    </div>                    		
    				{{ include('TemplateManagement/Section/_form.html.twig') }}
    			</div>
                <div class="col-3"> 
                    {# render(controller('App\\Controller\\TemplateManagement\\SectionController::classes')) #}
                    {{ include('TemplateManagement/Section/_classes.html.twig') }}
                </div>                		
    		</div>
    	</div>

    </div>    			
</div>

<input type="hidden" id="admin_template_section_contenu" value="{{ path("admin_template_section_contenu", {'format': 'pdf'}) }}"> 
<input type="hidden" id="admin_published_document_download_locale" value="{{ path("admin_published_document_download_locale") }}"> 

{% endblock %}

{% block javascripts %} 
    {{ parent() }}   
    {{ encore_entry_script_tags('js/section') }}
    {{ encore_entry_script_tags('js/datatables') }}
<script type="text/javascript">
  var CKEDITOR_BASEPATH = "/libs/ckeditor/";
</script>
<script src="{{ asset('libs/ckeditor/ckeditor.js') }}"></script>
<script>
if (CKEDITOR.instances["section_contenu"]) { CKEDITOR.instances["section_contenu"].destroy(true); delete CKEDITOR.instances["section_contenu"]; }

    CKEDITOR.replace("section_contenu", {
        toolbar: [
        { name: 'basicstyles', groups: [ 'basicstyles', 'cleanup' ], items: [ 'Bold', 'Italic', 'Underline', 'Strike'] },
        { name: 'colors', items: [ 'TextColor', 'BGColor' ] },    
        { name: 'paragraph', groups: [ 'list', 'indent', 'blocks', 'align', 'bidi' ], items: [ 'NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-', 'Blockquote', '-', 'JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock', '-', 'BidiLtr', 'BidiRtl'] },
        { name: 'insert', items: ['Table', 'HorizontalRule'] },
        { name: 'clipboard', groups: [ 'clipboard', 'undo' ], items: [ 'Undo', 'Redo' ] },
        '/',
        { name: 'styles', items: [ 'Styles', 'Format', 'FontSize' ] },
        { name: 'tools', items: [ 'Maximize', 'ShowBlocks' ] },
        { name: 'others', items: [ '-' ] },
        { name: 'document', groups: [ 'mode', 'document', 'doctools' ], items: [ 'Source' ] }
    ]
    });
</script>     
{% endblock %}
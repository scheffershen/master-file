<div id="accordion">

    {# system variable #}
    <h6 class="page-title">{{ 'label.systeme'|trans }}</h6>    
    {% for classe in classesSysteme %}
        <div class="card">
            <div class="card-header" id="heading{{ classe.id }}">
                <i class="fas fa-code"></i> 
                <a class="text-dark" data-toggle="collapse" href="#collapse{{ classe.id }}" aria-expanded="false">
                    {{ classe.title }}
                </a>
            </div>

            <div id="collapse{{ classe.id }}" class="collapse pl-2" aria-labelledby="heading{{ classe.id }}" data-parent="#accordion">
                <ul class="list-unstyled pl-2">
                    {% if classe.title == "Logique" %}
                        <li class="mt-3">
                            {#<select class="chosen">                                     
                                {% for variable in classe.variables %}
                                    <option>{{ variable.balise }}</option>
                                {% endfor %}
                            </select>#}
                            <a class="icon text-purple" href="javascript:void();" alt="{{ 'action.show'|trans }}" title="{{ 'action.show'|trans }}" data-target="#logiqueVariables" data-toggle="modal">
                                <i class="fas fa-lg fa-eye"></i>
                            </a>
                        </li>
                    {% else %}    
                        {% for variable in classe.variables %}
                            <li>
                                <small class="text-muted" data-toggle="modal" data-target="#variable{{ variable.id }}" title="{{ variable.label }}" style="cursor: pointer;">{{ variable.balise }}</small>
                            </li>
                        {% endfor %}
                    {% endif %}    
                </ul>
            </div>  
        </div>
    {% endfor %}  

    {# globale variable #}
    <h6 class="page-title mt-3">{{ 'label.globale'|trans }}</h6>
	{% for classe in classesGlobale %}
	    <div class="card">
	        <div class="card-header" id="heading{{ classe.id }}">
	            <i class="fas fa-code"></i> 
	            <a class="text-dark" data-toggle="collapse" href="#collapse{{ classe.id }}" aria-expanded="false">
                    {{ classe.title }}
                </a>
	        </div>

	        <div id="collapse{{ classe.id }}" class="collapse pl-2" aria-labelledby="heading{{ classe.id }}" data-parent="#accordion">
			    <ul class="list-unstyled pl-2">
					{% for variable in classe.variables %}
						<li>
							<small class="text-muted" data-toggle="modal" data-target="#variable{{ variable.id }}" title="{{ variable.label }}" style="cursor: pointer;">{{ variable.balise }}</small>
						</li>
					{% endfor %}
				</ul>
	        </div>	
	    </div>
    {% endfor %}

    {# locale variable #}
    {% if classes %}
        <h6 class="page-title mt-3">{{ 'label.locale'|trans }}</h6>
		{% for classe in classes %}
		    <div class="card">
		        <div class="card-header" id="heading{{ classe.id }}">
		            <i class="fas fa-code"></i> 
		            <a class="text-dark" data-toggle="collapse" href="#collapse{{ classe.id }}" aria-expanded="false">
	                    {{ classe.title }}
	                </a>
		        </div>

		        <div id="collapse{{ classe.id }}" class="collapse pl-2" aria-labelledby="heading{{ classe.id }}" data-parent="#accordion">
				    <ul class="list-unstyled pl-2">
						{% for variable in classe.variables %}
							<li>
								<small class="text-muted" data-toggle="modal" data-target="#variable{{ variable.id }}" title="{{ variable.label }}" style="cursor: pointer;">{{ variable.balise }}</small>
							</li>
						{% endfor %}
					</ul>
		        </div>	
		    </div>
	    {% endfor %}	
	{% endif %}  

    {# qualios variable #}
    <h6 class="page-title mt-3">{{ 'qualios'|trans }}</h6>
    <div class="card">
        <div class="card-header" id="heading-qualios">
            <i class="fas fa-code"></i> 
            <a class="text-dark" data-toggle="collapse" href="#collapse-qualios" aria-expanded="false">
                {{ 'qualios'|trans }}

{% for classe in classesSysteme %}
	{% for variable in classe.variables %}
<div class="modal fade" id="variable{{ variable.id }}" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{ variable.label }}</h4>
                <button type="button" class="close" data-dismiss="modal">&times;
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>{{ 'variable.balise'|trans }}</th>
                            <td>{{ variable.balise }}</td>
                        </tr>   
                        {% if variable.description %}                     
                        <tr>
                            <th>{{ 'label.description'|trans }}</th>
                            <td>{{ variable.description }}</td>
                        </tr>  
				        <tr>
				            <th>{{ 'lov.typeVariable'|trans }}</th>
				            <td>{{ variable.type }}</td>
				        </tr>                            
				        <tr>
				            <th>{{ 'lov.scope'|trans }}</th>
				            <td>{{ variable.scope }}</td>
				        </tr>                          
                        {% endif %} 
                        {% if variable.userHelp %}                     
                        <tr>
                            <th>{{ 'label.userHelp'|trans }}</th>
                            <td>
                                {% autoescape %}
                                    {{  variable.userHelp|raw }} 
                                {% endautoescape %}                                
                            </td>
                        </tr>
                        {% endif %}
                    </tbody>
                </table>                        
            </div>
        </div>
    </div>    
</div>
    {% endfor %}
{% endfor %}


{% for page in pages %}
<page backtop="7mm" backbottom="7mm" backleft="10mm" backright="10mm"> 
    <page_header>
        <table style='width: 100%; border: solid 0px black;padding: 5px;padding: 5px;'>
            <tr>
                <td style='text-align: center; width: 100%'>{% autoescape %}{{ header|raw }}{% endautoescape %}</td>
            </tr>
        </table>
    </page_header>
    <page_footer>
        <table style='width: 100%; border: solid 0px black;'>
            <tr>
                <td style='text-align: right;  width: 20%'>&nbsp;</td>
                <td style='text-align: center; width: 60%'>{% autoescape %}{{ footer|raw }}{% endautoescape %}</td>
                <td style='text-align: right;  width: 20%'>Page [[page_cu]]/[[page_nb]]</td>
            </tr>
        </table>
    </page_footer>    
        {% autoescape %}
            {{ page|raw }} 
        {% endautoescape %}                                   
</page>                 
{% endfor %}
{{ include('partials/_flash_messages.html.twig') }}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
	
{{ form_start(form) }}
{{ form_errors(form) }}

    {% if publishedDocument.pdfSigneUri is not null %}
		<div class="form-group pdf-file" id="pdf-preview">
			<embed src="{{ path('admin_private_upload', {'upload': publishedDocument.pdfSigneUri, 'format': 'pdfSigne'}) }}" width="100%" height="800px" type='application/pdf'/>
		</div>
	{% else %}	
		<div class="form-group pdf-file" id="pdf-preview">
		</div>        
    {% endif %}    
    {{ form_row(form.pdfSigne) }} {#published_document_pdf_signe_pdfSigne_file#}  

    {{ form_row(form.pdfSigneComentary) }}
    <div class="form-group">
        <button type="submit" class="btn waves-effect waves-light btn-purple">
        <i class="fas fa-save"></i>&nbsp; {{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
